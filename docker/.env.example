# Agentic Microservices Docker Environment Configuration

# Project Configuration
PROJECT_ID=agentic-microservices
IMAGE_TAG=latest
REGISTRY=gcr.io

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# MCP Authentication Tokens
USER_SERVICE_TOKEN=your-user-service-token
TRANSACTION_SERVICE_TOKEN=your-transaction-service-token
PRODUCT_SERVICE_TOKEN=your-product-service-token
ORDER_SERVICE_TOKEN=your-order-service-token

# A2A Communication Security
A2A_ENCRYPTION_KEY=your-a2a-encryption-key
A2A_SIGNING_KEY=your-a2a-signing-key

# Redis Configuration
REDIS_PASSWORD=your-redis-password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=3s
HEALTH_CHECK_RETRIES=3

# Resource Limits (for Docker Compose)
CHATBOT_MEMORY_LIMIT=512m
FRAUD_DETECTION_MEMORY_LIMIT=1g
RECOMMENDATION_MEMORY_LIMIT=768m
MCP_GATEWAY_MEMORY_LIMIT=512m
A2A_HUB_MEMORY_LIMIT=512m
ADK_MEMORY_LIMIT=512m
REDIS_MEMORY_LIMIT=256m